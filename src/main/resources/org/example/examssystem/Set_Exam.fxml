<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<VBox alignment="CENTER" spacing="25"
      xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.examssystem.SetExam_controller"
      stylesheets="@style.css">

   <Text text="Set Exam Details" styleClass="title-text" />

   <Label fx:id="Alarm" styleClass="alarm-label" />

   <GridPane alignment="CENTER" hgap="20" vgap="20" styleClass="grid-pane">
      <columnConstraints>
         <ColumnConstraints minWidth="130" />
         <ColumnConstraints minWidth="280" />
      </columnConstraints>

      <Label text="Exam Date:" GridPane.rowIndex="0" GridPane.columnIndex="0" styleClass="grid-label" />
      <TextField fx:id="Exam_Date" promptText="DD/MM/YY" styleClass="grid-input" GridPane.rowIndex="0" GridPane.columnIndex="1" />

      <Label text="Exam Time:" GridPane.rowIndex="1" GridPane.columnIndex="0" styleClass="grid-label" />
      <TextField fx:id="Exam_Time" promptText="e.g. 2" styleClass="grid-input" GridPane.rowIndex="1" GridPane.columnIndex="1" />

      <Label text="Exam ID:" GridPane.rowIndex="2" GridPane.columnIndex="0" styleClass="grid-label" />
      <TextField fx:id="ID" promptText="5-digit ID" styleClass="grid-input" GridPane.rowIndex="2" GridPane.columnIndex="1" />

      <Label text="Exam Type:" GridPane.rowIndex="3" GridPane.columnIndex="0" styleClass="grid-label" />
      <ComboBox fx:id="Exam_Type" prefHeight="35" styleClass="grid-input" GridPane.rowIndex="3" GridPane.columnIndex="1" />

      <Label text="Exam Name:" GridPane.rowIndex="4" GridPane.columnIndex="0" styleClass="grid-label" />
      <ComboBox fx:id="Exam_Name" prefWidth="200" prefHeight="35" styleClass="grid-input" GridPane.rowIndex="4" GridPane.columnIndex="1" />
   </GridPane>

   <HBox alignment="CENTER">
      <Button fx:id="Set_Exam_Button" text="Set Questions" onAction="#Set_Questions" styleClass="set-exam-button" />
   </HBox>
</VBox>
