      <Label fx:id="Answer_A" layoutX="16.0" layoutY="188.0" style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Answer A:" />
      <TextField fx:id="set_Answer_A" layoutX="86.0" layoutY="184.0" prefHeight="26.0" prefWidth="550.0" />

      <Label fx:id="Answer_B" layoutX="16.0" layoutY="225.0" style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Answer B:" />
