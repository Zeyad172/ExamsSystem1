      <ComboBox fx:id="Question_Type" layoutX="646.0" layoutY="141.0" onAction="#Question_Type_Box" prefHeight="26.0" prefWidth="142.0" promptText="Question's Type" />
      <Label layoutX="660.0" layoutY="121.0" style="-fx-font-size: 14px; -fx-font-weight: bold;" text="Question Type" />
