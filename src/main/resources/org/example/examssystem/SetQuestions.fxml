<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.examssystem.SetQues_controller">
   <children>
      <Label layoutX="200.0" layoutY="30.0" prefHeight="18.0" prefWidth="150.0" text="Number of Questions:" />
      <TextField layoutX="370.0" layoutY="26.0" onAction="#get_number_of_questions" prefHeight="26.0" prefWidth="120.0" />

      <Label layoutX="200.0" layoutY="70.0" text="Question Number: " />
      <Label layoutX="370.0" layoutY="70.0" prefHeight="18.0" prefWidth="100.0" style="-fx-font-size: 14px;" text="Question 1" textAlignment="CENTER" textFill="#00aeff" />

      <Label layoutX="71.0" layoutY="101.0" text="Question:" />
      <TextField layoutX="125.0" layoutY="97.0" prefHeight="26.0" prefWidth="550.0" />

      <Label layoutX="71.0" layoutY="144.0" text="Answer A:" />
      <TextField layoutX="125.0" layoutY="140.0" prefHeight="26.0" prefWidth="550.0" />

      <Label layoutX="71.0" layoutY="183.0" text="Answer B:" />
      <TextField layoutX="125.0" layoutY="178.0" prefHeight="26.0" prefWidth="550.0" />

      <Label layoutX="71.0" layoutY="226.0" text="Answer C:" />
      <TextField layoutX="125.0" layoutY="222.0" prefHeight="26.0" prefWidth="550.0" />

      <Label layoutX="71.0" layoutY="259.0" text="Answer D:" />
      <TextField layoutX="125.0" layoutY="255.0" prefHeight="26.0" prefWidth="550.0" />

      <Label layoutX="136.0" layoutY="305.0" text="Right Answer: " />
      <TextField layoutX="250.0" layoutY="301.0" prefHeight="26.0" prefWidth="300.0" />

      <Button layoutX="181.0" layoutY="360.0" mnemonicParsing="false" onAction="#save" prefHeight="40.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-background-color: #005BBB; -fx-text-fill: white; -fx-font-size: 14px;" text="Save" />

      <Button layoutX="461.0" layoutY="360.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-background-color: #d90429; -fx-text-fill: white; -fx-font-size: 14px;" text="Delete" />

      <Button layoutX="19.0" layoutY="550.0" mnemonicParsing="false" onAction="#Next_Button" style="-fx-text-fill: white; -fx-background-color: green; -fx-font-weight: bold;" text="&lt;--Next" />
      <Button layoutX="705.0" layoutY="550.0" mnemonicParsing="false" onAction="#Back_Button" style="-fx-background-color: blue; -fx-font-weight: bold; -fx-text-fill: white;" text="Back--&gt;" />

      <!-- Removed ExpansionPanel.ExpandedPanel because it's invalid -->

      <Button layoutX="340.0" layoutY="459.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #0de1a5;" text="Finish" textFill="#f6faf9" />
   </children>
</AnchorPane>
