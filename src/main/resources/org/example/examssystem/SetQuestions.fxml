      <Label layoutX="200.0" layoutY="70.0" style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Question Number: " />
      <Label fx:id="Number_of_Questions" layoutX="370.0" layoutY="67.0" prefHeight="18.0" prefWidth="100.0" style="-fx-font-size: 19px; -fx-font-weight: bold;" text="Question 1" textAlignment="CENTER" textFill="#1800ff" />

      <Label layoutX="17.0" layoutY="143.0" style="-fx-font-size: 15px; -fx-font-weight: bold;" text="Question:" />
