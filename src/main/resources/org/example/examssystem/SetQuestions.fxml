<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.examssystem.SetQues_controller">
   <children>
      <Label layoutX="200.0" layoutY="30.0" prefHeight="18.0" prefWidth="150.0" style="-fx-font-size: 14px;" text="Number of Questions:" />
      <TextField fx:id="set_QuestionNumber" layoutX="370.0" layoutY="26.0" onAction="#Save_number_of_questions" prefHeight="26.0" prefWidth="120.0" />

      <Label layoutX="200.0" layoutY="70.0" style="-fx-font-size: 15px;" text="Question Number: " />
      <Label fx:id="Number_of_Questions" layoutX="370.0" layoutY="70.0" prefHeight="18.0" prefWidth="100.0" style="-fx-font-size: 16px;" text="Question 1" textAlignment="CENTER" textFill="#00aeff" />

      <Label layoutX="56.0" layoutY="144.0" style="-fx-font-size: 15px;" text="Question:" />
      <TextField fx:id="set_Question" layoutX="125.0" layoutY="142.0" prefHeight="26.0" prefWidth="550.0" />

      <Label layoutX="55.0" layoutY="189.0" style="-fx-font-size: 15px;" text="Answer A:" />
      <TextField fx:id="set_Answer_A" layoutX="125.0" layoutY="185.0" prefHeight="26.0" prefWidth="550.0" />

      <Label layoutX="55.0" layoutY="226.0" style="-fx-font-size: 15px;" text="Answer B:" />
      <TextField fx:id="set_Answer_B" layoutX="125.0" layoutY="224.0" prefHeight="26.0" prefWidth="550.0" />

      <Label fx:id="Answer_C" layoutX="55.0" layoutY="271.0" style="-fx-font-size: 15px;" text="Answer C:" />
      <TextField fx:id="set_Answer_C" layoutX="125.0" layoutY="269.0" prefHeight="26.0" prefWidth="550.0" />

      <Label fx:id="Answer_D" layoutX="54.0" layoutY="315.0" style="-fx-font-size: 15px;" text="Answer D:" />
      <TextField fx:id="set_Answer_D" layoutX="125.0" layoutY="313.0" prefHeight="26.0" prefWidth="550.0" />

      <Label layoutX="136.0" layoutY="376.0" style="-fx-font-size: 15px;" text="Right Answer: " />
      <TextField fx:id="set_Right_Answer" layoutX="239.0" layoutY="371.0" prefHeight="26.0" prefWidth="300.0" />

      <Button layoutX="152.0" layoutY="439.0" mnemonicParsing="false" onAction="#save" prefHeight="40.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-background-color: #005BBB; -fx-text-fill: white; -fx-font-size: 14px;" text="Save Question" />

      <Button layoutX="490.0" layoutY="439.0" mnemonicParsing="false" prefHeight="40.0" prefWidth="126.0" style="-fx-font-weight: bold; -fx-background-color: #d90429; -fx-text-fill: white; -fx-font-size: 14px;" text="Delete Question" />

      <Button fx:id="next_question" layoutX="19.0" layoutY="550.0" mnemonicParsing="false" onAction="#Next_Button" style="-fx-text-fill: white; -fx-background-color: green; -fx-font-weight: bold;" text="&lt;--Next" />
      <Button fx:id="back" layoutX="705.0" layoutY="550.0" mnemonicParsing="false" onAction="#Back_Button" style="-fx-background-color: blue; -fx-font-weight: bold; -fx-text-fill: white;" text="Back--&gt;" />

      <!-- Removed ExpansionPanel.ExpandedPanel because it's invalid -->

      <Button fx:id="finished" layoutX="326.0" layoutY="479.0" mnemonicParsing="false" onAction="#Button_Finish" prefHeight="40.0" prefWidth="120.0" style="-fx-font-weight: bold; -fx-font-size: 14px; -fx-text-fill: white; -fx-background-color: #0de1a5;" text="Finish Exam" textFill="#f6faf9" />
      <Button layoutX="526.0" layoutY="26.0" mnemonicParsing="false" onAction="#Save_number_of_questions" style="-fx-font-weight: bold; -fx-font-size: 12px; -fx-background-color: gray; -fx-text-fill: white;" text="Savae Number" />
      <ComboBox fx:id="Number_of_Answers" layoutX="717.0" layoutY="97.0" prefHeight="26.0" prefWidth="62.0" />
      <Label layoutX="597.0" layoutY="100.0" prefHeight="18.0" prefWidth="120.0" style="-fx-font-size: 13px;" text="Numberof Answers:" />
      <Button fx:id="ok" layoutX="733.0" layoutY="177.0" mnemonicParsing="false" onAction="#Button_ok" text="ok" />
      <Label fx:id="Alarm" layoutX="136.0" layoutY="98.0" prefHeight="34.0" prefWidth="438.0" />
   </children>
</AnchorPane>
