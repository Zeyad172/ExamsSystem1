<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.collections.FXCollections?>

<?import java.lang.String?>
<VBox alignment="CENTER" spacing="20" style="-fx-padding: 30; -fx-background-color: transparent;"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1">

   <!-- Header -->
   <Text style="-fx-font-size: 24pt; -fx-font-weight: bold; -fx-fill: white;" text="Helwan Exams System"/>
   <Text style="-fx-font-size: 16pt; -fx-fill: white;" text="welcome to Helwan's Exam System"/>

   <!-- Form Grid -->
   <GridPane alignment="CENTER" hgap="15" vgap="15" style="-fx-background-color: rgba(255,255,255,0.2); -fx-background-radius: 10; -fx-padding: 20;">
      <columnConstraints>
         <ColumnConstraints halignment="RIGHT" minWidth="100"/>
         <ColumnConstraints halignment="LEFT" minWidth="200"/>
      </columnConstraints>

      <rowConstraints>
         <RowConstraints minHeight="40"/>
         <RowConstraints minHeight="40"/>
         <RowConstraints minHeight="40"/>
      </rowConstraints>

      <!-- User Name -->
      <Label text="User Name:" style="-fx-text-fill: white; -fx-font-size: 14pt;" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
      <TextField promptText="Enter User Name" style="-fx-font-size: 14pt;" GridPane.columnIndex="1" GridPane.rowIndex="0"/>

      <!-- Password -->
      <Label text="Password:" style="-fx-text-fill: white; -fx-font-size: 14pt;" GridPane.columnIndex="0" GridPane.rowIndex="1"/>
      <PasswordField promptText="Enter Your Password" style="-fx-font-size: 14pt;" GridPane.columnIndex="1" GridPane.rowIndex="1"/>

      <!-- Category -->
      <Label text="Category:" style="-fx-text-fill: white; -fx-font-size: 14pt;" GridPane.columnIndex="0" GridPane.rowIndex="2"/>
      <ComboBox promptText="Choose the Category" style="-fx-font-size: 14pt;" GridPane.columnIndex="1" GridPane.rowIndex="2">
         <items>
            <FXCollections fx:factory="observableArrayList">
               <String fx:value="Student"/>
               <String fx:value="Administrator"/>
               <String fx:value="Professor"/>
            </FXCollections>
         </items>
      </ComboBox>
   </GridPane>

   <!-- Buttons -->
   <HBox alignment="CENTER" spacing="30">
      <Button text="Submit" style="-fx-background-color: #4CAF50; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14pt; -fx-pref-width: 120;"/>
      <Button text="Information" style="-fx-background-color: #3498db; -fx-font-weight: bold; -fx-text-fill: white; -fx-font-size: 14pt; -fx-pref-width: 140;"/>
   </HBox>
</VBox>